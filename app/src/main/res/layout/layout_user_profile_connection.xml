<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="6dp"
    android:paddingVertical="5dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false"
    android:layout_marginTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_connection_profile_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/user_profile_connection_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="User name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/user_profile_connection_profile_picture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/user_profile_connection_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="User title"
            android:textSize="16sp"
            android:textColor="@color/gray_700"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/user_profile_connection_profile_picture"
            app:layout_constraintTop_toBottomOf="@id/user_profile_connection_name"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/user_profile_connection_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="User city"
            android:textSize="16sp"
            android:textColor="@color/gray_400"
            android:layout_marginLeft="20dp"
            app:layout_constraintLeft_toRightOf="@id/user_profile_connection_profile_picture"
            app:layout_constraintTop_toBottomOf="@id/user_profile_connection_title"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>