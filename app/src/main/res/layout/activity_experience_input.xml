<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ExperienceInputActivity"
    android:paddingTop="20dp"
    android:paddingHorizontal="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="@dimen/list_detail_detail_fontsize"
        android:textColor="@color/gray_900"/>

    <EditText
        android:id="@+id/experience_input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CEO of Konnect"
        android:textSize="@dimen/list_detail_title_fontsize" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Employment Type"
        android:textSize="@dimen/list_detail_detail_fontsize"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray_900"/>

    <Spinner
        android:id="@+id/edit_experience_employment_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Institution"
        android:textSize="@dimen/list_detail_detail_fontsize"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray_900"/>

    <Spinner
        android:id="@+id/edit_experience_institution_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/edit_experience_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I currently work in this role" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start date"
        android:textSize="@dimen/list_detail_detail_fontsize"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray_900"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/experience_input_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/list_detail_title_fontsize"
            android:hint="start date"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <EditText
            android:id="@+id/experience_input_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/list_detail_title_fontsize"
            android:hint="end date"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="@dimen/list_detail_detail_fontsize"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray_900" />

    <EditText
        android:id="@+id/experience_input_desription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:minLines="3"
        android:maxLines="5"
        android:textSize="@dimen/list_detail_title_fontsize"
        android:hint="Tell us about your work experience" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/experience_input_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_marginHorizontal="5dp"/>

        <Button
            android:id="@+id/experience_input_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:layout_marginHorizontal="5dp"/>

    </LinearLayout>

</LinearLayout>