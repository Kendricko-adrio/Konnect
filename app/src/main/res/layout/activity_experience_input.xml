<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.ExperienceInputActivity"
    android:paddingTop="20dp"
    android:paddingHorizontal="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textSize="@dimen/list_detail_detail_fontsize"
        android:textColor="@color/gray_900"/>

    <EditText
        style="@style/edit_text_border"
        android:id="@+id/experience_input_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/ceo_of_konnect"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/employment_type"
        android:textSize="@dimen/list_detail_detail_fontsize"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray_900"/>

    <Spinner
        android:id="@+id/edit_experience_employment_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/institution"
        android:textSize="@dimen/list_detail_detail_fontsize"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray_900"/>

    <Spinner
        android:id="@+id/edit_experience_institution_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/edit_experience_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/i_currently_work_in_this_role" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_date"
        android:textSize="@dimen/list_detail_detail_fontsize"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray_900"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            style="@style/edit_text_border"
            android:id="@+id/experience_input_start_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="@string/start_date"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>

        <EditText
            android:id="@+id/experience_input_end_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/list_detail_title_fontsize"
            android:hint="@string/end_date"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/description"
        android:textSize="@dimen/list_detail_detail_fontsize"
        android:layout_marginTop="15dp"
        android:textColor="@color/gray_900" />

    <EditText
        android:id="@+id/experience_input_desription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:minLines="3"
        android:maxLines="5"
        style="@style/edit_text_border"
        android:hint="@string/tell_us_about_your_work_experience" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <Button
            android:id="@+id/experience_input_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:layout_marginHorizontal="5dp"/>

        <Button
            android:id="@+id/experience_input_save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginHorizontal="5dp"/>

    </LinearLayout>

</LinearLayout>